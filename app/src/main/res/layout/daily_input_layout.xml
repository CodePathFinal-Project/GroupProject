<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/saveDate"
        android:layout_width="110dp"
        android:layout_height="0dp"
        android:layout_marginBottom="88dp"
        android:background="@color/mint_dirty"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fatigueBar" />

    <TextView
        android:id="@+id/textDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="42dp"
        android:layout_marginBottom="236dp"
        android:gravity="center"
        android:inputType="date"
        android:textColor="@color/pink_light"
        android:textSize="36dp"
        app:layout_constraintBottom_toTopOf="@+id/cramps"
        app:layout_constraintStart_toStartOf="@+id/textStartDate"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Mon, Jan 13" />

    <TextView
        android:id="@+id/textStartDate"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="71dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:text="Start date"
        android:textColor="@color/pink_light"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/textEndDate"
        app:layout_constraintEnd_toStartOf="@+id/buttonStartDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textDate" />

    <TextView
        android:id="@+id/textEndDate"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="71dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text="End date"
        android:textColor="@color/pink_light"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/crampsBar"
        app:layout_constraintEnd_toStartOf="@+id/buttonEndDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textStartDate" />

    <Button
        android:id="@+id/buttonStartDate"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="96dp"
        android:background="@drawable/button"
        android:text="Select date"
        app:layout_constraintBottom_toBottomOf="@+id/buttonEndDate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textStartDate"
        app:layout_constraintTop_toTopOf="@+id/textDate"
        tools:text="13 Jan" />


    <Button
        android:id="@+id/buttonEndDate"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginTop="188dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="187dp"
        android:background="@drawable/button"
        android:text="Select date"
        app:layout_constraintBottom_toBottomOf="@+id/headache"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textEndDate"
        app:layout_constraintTop_toTopOf="@+id/textDate"
        tools:text="19 Jan" />

    <TextView
        android:id="@+id/cramps"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="cramps"
        android:textColor="#E1D3E9"
        app:layout_constraintBottom_toTopOf="@+id/acne"
        app:layout_constraintEnd_toStartOf="@+id/crampsBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textDate" />

    <SeekBar
        android:id="@+id/crampsBar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="38dp"
        android:thumbTint="#E1D3E9"
        app:layout_constraintBottom_toTopOf="@+id/acneBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cramps"
        app:layout_constraintTop_toBottomOf="@+id/textEndDate" />

    <TextView
        android:id="@+id/fatigue"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="225dp"
        android:gravity="center"
        android:text="fatigue"
        android:textColor="#E1D3E9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/fatigueBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headache" />

    <SeekBar
        android:id="@+id/fatigueBar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="112dp"
        android:thumbTint="#E1D3E9"
        app:layout_constraintBottom_toTopOf="@+id/saveDate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fatigue"
        app:layout_constraintTop_toBottomOf="@+id/headacheBar" />

    <TextView
        android:id="@+id/headache"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="headache"
        android:textColor="#E1D3E9"
        app:layout_constraintBottom_toTopOf="@+id/fatigue"
        app:layout_constraintEnd_toStartOf="@+id/headacheBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/acne" />

    <SeekBar
        android:id="@+id/headacheBar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="39dp"
        android:thumbTint="#E1D3E9"
        app:layout_constraintBottom_toTopOf="@+id/fatigueBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/headache"
        app:layout_constraintTop_toBottomOf="@+id/acneBar" />

    <TextView
        android:id="@+id/acne"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="acne"
        android:textColor="#E1D3E9"
        app:layout_constraintBottom_toTopOf="@+id/headache"
        app:layout_constraintEnd_toStartOf="@+id/acneBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cramps" />

    <SeekBar
        android:id="@+id/acneBar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="38dp"
        android:thumbTint="#E1D3E9"
        app:layout_constraintBottom_toTopOf="@+id/headacheBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/acne"
        app:layout_constraintTop_toBottomOf="@+id/crampsBar" />

</androidx.constraintlayout.widget.ConstraintLayout>