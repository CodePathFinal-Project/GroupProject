<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Hi, username!"
        android:textColor="@color/pink_light"
        android:textSize="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.038" />

    <TextView
        android:id="@+id/periodLengthTv"
        android:layout_width="160dp"
        android:layout_height="55dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="144dp"
        android:gravity="center"
        android:text="Period Length"
        android:textColor="@color/pink_light"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cycleLengthTv"
        android:layout_width="160dp"
        android:layout_height="55dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="Cycle Length"
        android:textColor="@color/pink_light"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/periodLengthTv" />

    <EditText
        android:id="@+id/periodLengthEt"
        android:layout_width="110dp"
        android:layout_height="38dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="64dp"
        android:background="@drawable/button"
        android:gravity="center"
        android:inputType="number"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/periodLengthTv"
        app:layout_constraintTop_toBottomOf="@+id/textUser"
        tools:hint="Enter number" />

    <EditText
        android:id="@+id/cycleLengthEt"
        android:layout_width="110dp"
        android:layout_height="38dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="64dp"
        android:background="@drawable/button"
        android:gravity="center"
        android:inputType="number"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/cycleLengthTv"
        app:layout_constraintTop_toBottomOf="@+id/periodLengthEt"
        tools:hint="Enter number" />

    <Button
        android:id="@+id/saveBtn"
        android:layout_width="110dp"
        android:layout_height="38dp"
        android:background="@drawable/button"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.611"
        tools:text="Save" />

    //Adding two editTexts later we will replace buttonCycleLength_User and buttonPeriodLength_User
</androidx.constraintlayout.widget.ConstraintLayout>